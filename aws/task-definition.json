{
    "family": "go-api-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "${executionRole}",
    "containerDefinitions": [
      {
        "name": "go-api",
        "image": "<image>",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "DB_HOST",
            "value": "${DB_HOST}"
          },
          {
            "name": "DB_PORT",
            "value": "3306"
          },
          {
            "name": "DB_NAME",
            "value": "go-api-db"
          },
          {
            "name": "DB_USER",
            "value": "admin"
          }
        ],
        "secrets": [
          {
            "name": "DB_PASSWORD",
            "valueFrom": "arn:aws:ssm:ap-northeast-3:703671922895:parameter/api/db-password"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/go-api-task",
            "awslogs-region": "ap-northeast-3",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
}